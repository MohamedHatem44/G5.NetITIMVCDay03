@model IEnumerable<Employee>

    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Salary</th>
                <th scope="col">Department Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="col">@item.Id</th>
                    <th scope="col">@item.Name</th>
                    <th scope="col">@item.Age</th>
                    <th scope="col">@item.Salary</th>
                    <th scope="col">@item.Department!.DeptName</th>
                    <th scope="col">
                        <a href="~/Employee/ViewDetails/@item.Id" class="btn btn-primary mx-2">View</a>
                        <a href="~/Employee/Edit/@item.Id" class="btn btn-warning mx-2">Edit</a>
                        <a href="~/Employee/Delete/@item.Id" class="btn btn-danger mx-2">Delete</a>
                    </th>
                </tr>
            }
        </tbody>
        <tfoot>
            <a href="~/Employee/Create" class="btn btn-success m-3">Add Employee</a>
        </tfoot>
    </table>